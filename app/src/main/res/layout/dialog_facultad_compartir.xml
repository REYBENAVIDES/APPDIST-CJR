<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardBackgroundColor="#FFFFFF"
    app:cardCornerRadius="20dp"
    app:cardElevation="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtEncabezadoDialog"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="24dp"
                android:layout_marginBottom="10dp"
                android:text="Compartir &quot;Facultad 1&quot;"
                android:textAlignment="textStart"
                android:textColor="#007224"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>

        <EditText
            android:id="@+id/editTextAgregarPersona"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="1dp"
            android:layout_marginRight="24dp"
            android:layout_marginBottom="1dp"
            android:background="@android:color/transparent"
            android:foregroundGravity="center_horizontal"
            android:gravity="center_vertical"
            android:hint="Agregar persona"
            android:minWidth="48dp"
            android:minHeight="48dp"
            android:textAlignment="textStart"
            android:textColor="#000000"
            android:textColorHint="#CCCCCC"
            android:textSize="14sp" />

        <View
            android:id="@+id/view2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#CCCCCC" />

        <CheckBox
            android:id="@+id/cbNotificar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="1dp"
            android:layout_marginRight="24dp"
            android:layout_marginBottom="1dp"
            android:buttonTint="#000000"
            android:text="Notificar a la persona"
            android:textColor="#000000" />

        <View
            android:id="@+id/view3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#CCCCCC" />

        <EditText
            android:id="@+id/editTextAgregarMensaje"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="11dp"
            android:layout_marginRight="24dp"
            android:layout_marginBottom="1dp"
            android:background="@android:color/transparent"
            android:foregroundGravity="center_horizontal"
            android:gravity="top|start"
            android:hint="Agregar mensaje"
            android:inputType="textMultiLine"
            android:maxHeight="192dp"
            android:minHeight="192dp"
            android:textAlignment="textStart"
            android:textColor="#000000"
            android:textColorHint="#CCCCCC"
            android:textSize="14sp" />

        <Button
            android:id="@+id/btnAgregarDialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="16dp"
            android:layout_weight="1"
            android:backgroundTint="#007224"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:text="Compartir"
            android:textColor="#FFFFFF"
            android:visibility="visible"
            app:cornerRadius="10dp"
            app:iconGravity="textStart" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
